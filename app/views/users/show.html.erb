<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
      <div class="btn-users-show">
        <%= link_to "◀︎",user_path(date: @first_day.prev_month),class: "btn btn-primary" %>
        &nbsp;&nbsp;
        【<%= l(@first_day, format: :middle) %>】
        時間管理表
        &nbsp;&nbsp;
        <%= link_to "▶︎",user_path(date: @first_day.next_month),class: "btn btn-primary" %>
      </td>
      <td>指定勤務開始時間：<%= format_basic_info(@user.designation_work_start_time) %><br>
          指定勤務終了時間：<%= format_basic_info(@user.designation_work_end_time) %></td>
      <td colspan="3">基本時間：<%= format_basic_info(@user.basic_work_time) %></td>
      <td>初日<%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード：<%= @user.staff_id %></td>
      <td></td>
      <td>出勤日数：<%= @worked_sum %>日</td>
      <td>締め<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="notice-group">
  <% if current_user.superior? %>
    <p clas="notice">【<%= link_to "所属長承認申請のお知らせ","#",class: "notice"%>】</p>
    <p clas="notice">【<%= link_to "勤怠変更申請のお知らせ","#",class: "notice"%>】</p>
    <p clas="notice">【<%= link_to "残業申請のお知らせ","#",class: "notice"%>】</p>
  <% end %>
</div>




  <%= link_to "勤怠を編集",attendances_edit_one_month_user_path(date: @first_day),class: "btn btn-primary" %> 
  &nbsp;<%= link_to "CSV出力",user_path(format: 'csv'),class: "btn btn-primary" %><br>
  <%= link_to "勤怠修正ログ（承認済）","#",class: "btn btn-primary" %>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan ="3">残業申請</th>
        <th rowspan ="3">日付</th>
        <th rowspan ="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">【所定外勤務】</th>
      </tr>
      
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan ="2"valign="bottom">在社時間</th>
        <th rowspan ="2">備考</th>
        <th colspan="2" >終了予定時間</th>
        <th rowspan ="2">時間外残業</th>
        <th rowspan ="2">業務処理内容</th>
        <th rowspan ="2">
          指示者確認<div class="maru size_small black">       
          <div class="letter3">印</div>
      </tr>

      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>

    <tbody tbody class="line">
    <% @attendances.each do |day| %>
          <% css_class = 
            case $days_of_the_week[day.worked_on.wday]
              when '土'
                'text-primary'
              when '日'
                'text-danger'
              end
              %>

        <tr>
          <td><%= link_to "残業申請",attendances_edit_overtime_request_user_path(@user,day),remote: true,class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at,format: :hour) if day.started_at.present? %></td>
          <td><%= l(day.started_at,format: :minute) if day.started_at.present? %></td>

          <td><% if btn_text = attendance_state_start(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
              <% end %>
          </td>

          <td><%= l(day.finished_at,format: :hour) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at,format: :minute) if day.finished_at.present? %></td>
          <td><% if btn_text = attendance_state_finish(day) %>
              <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %></td>
              <% end %>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
            <%= str_times = working_times(day.started_at, day.finished_at) %>
            <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <tr>
        <td></td>
        <td colspan="2">累計日数<br>
          <%= @attendances.count %>日</td>
        <td colspan="6">総合勤務時間<br>
        <%= format_basic_info(@user.basic_work_time).to_f * @worked_sum %>
          </td>
        <td>累計在社時間<br>
          <%= format("%.2f", @total_working_times.to_f) %></td>
        <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        <td>
          <%= form_with(model: @user, local: true) do |f| %>
          <div class="form-group">
            <%= f.label :boss,"所属長承認 未" %>
            <%= f.select :boss,{'上長A':1, '上長B':2}, { include_blank: ''}, { class: 'form-control input-sm' , required: true } %>
          </div>
          <div class="form-group">
            <%= f.submit '申請する', class: 'btn btn-primary' %>
          </div>
          <% end %>
        </td>
      </tr>
    </tfoot> 
  </table>
</div>

<div id="attendances_edit_overtime_request" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>